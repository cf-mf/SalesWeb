@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple search</legend>

                <div class="mb-3">
                    <label class="form-label">Min Date</label>
                    <input type="date" name="minDate" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Max Date</label>
                    <input type="date" name="maxDate" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </fieldset>
        </form>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <form asp-action="GroupingSearch">
            <fieldset>
                <legend>Grouping search</legend>

                <div class="mb-3">
                    <label class="form-label">Min Date</label>
                    <input type="date" name="minDate" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Max Date</label>
                    <input type="date" name="maxDate" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </fieldset>
        </form>
    </div>
</div>
